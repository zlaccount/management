       function uniqueArr(oldArr){
          var filterArr = [];
          for(var i=0;i<oldArr.length;i++){
              if(filterArr.indexOf(oldArr[i]) == -1){
                  filterArr.push(oldArr[i]);
              }
          }
          return filterArr;
       };

