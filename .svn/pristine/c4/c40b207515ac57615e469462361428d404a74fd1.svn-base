    var goodsStartTime={
        elem: '#count_start',
        event: 'focus',
        min: laydate.now(-730),
        max: laydate.now(),
        choose: function(datas){
            goodsEndTime.min = datas; //开始日选好后，重置结束日的最小日期
            goodsEndTime.start = datas //将结束日的初始值设定为开始日
        }
    };
    var goodsEndTime={
        elem: '#count_end',
        event: 'focus',
        istime: true,
        istoday: false,
        max: laydate.now(),
        choose: function(datas){
            goodsStartTime.max = datas; //结束日选好后，重置开始日的最大日期
        }
