<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>个人信息</title>
    <link rel="stylesheet" href="assets/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="css/main.css"/>
    <link rel="stylesheet" type="text/css" href="css/information.css">
</head>
<body>
<div id="information">
    <div class="schedule_head">医院信息</div>
    <div class="head">
        <label >医院基本信息</label>
        <label style="margin-left:44%">科室设置</label>
        <hr>
        <div class="">
            <table>
                <tr>
                    <td style="width:20%">医院名称：</td>
                    <td style="width:30%;text-align:left">
                        <input  type="text" style="width:100%"/>
                    </td>
                    <td style="width:20%">医院简称：</td>
                    <td style="width:30%;text-align:left">
                        <input  type="text" style="width:100%"/>
                    </td>
                </tr>
                <tr>
                    <td style="width:20%">医院等级：</td>
                    <td style="width:30%;text-align:left">
                        <select >
                            <option selected="selected">一级</option>
                            <option>二级</option>
                            <option>三级</option>
                        </select>
                        <select >
                            <option selected="selected">甲等</option>
                            <option>乙等</option>
                            <option>丙等</option>
                        </select>
                    </td>
                    <td style="width:20%">医院性质：</td>
                    <td style="width:30%;text-align:left">
                        <input  type="text" style="width:100%"/>
                    </td>
                </tr>
                <tr>
                    <td style="width:20%">医院类型：</td>
                    <td style="width:30%;text-align:left" colspan="3">
                        <select >
                            <option selected="selected">请选择</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td style="width:20%">许可证：</td>
                    <td style="width:80%;text-align:left" colspan="3">
                        <input class="dicussFile" type="file" onchange="dicussImg()" />
                    </td>
                </tr>
                <tr>
                    <td style="width:20%">医院LOGO：</td>
                    <td style="width:80%;text-align:left" colspan="3">
                        <input class="dicussFile" type="file" onchange="dicussImg()">
                        <!-- <p>共<span class="dis_img_sp1">0</span>张,还能上传<span class="dis_img_sp2">5</span>张</p> -->
                    </td>
                </tr>
                <tr >
                    <td style="width:20%;" >医院介绍：</td>
                    <td style="width:30%;text-align:left;height:200px;" colspan="3">
                        <textarea style="width:100%;height:100%"></textarea>
                    </td>
                </tr>
                <tr>
                    <td style="width:20%">医院地址：</td>
                    <td style="width:30%;text-align:left" colspan="3">
                        <select >
                            <option selected="selected">选择省</option>
                        </select>
                        <select >
                            <option selected="selected">选择市</option>
                        </select>
                        <select >
                            <option selected="selected">选择县</option>
                        </select>
                        <input  type="text" placeholder="请输入详细地址" style="width:250px;"/>
                    </td>
                </tr>
                <tr>
                    <td style="width:20%">医院电话：</td>
                    <td style="width:30%;text-align:left" colspan="3">
                        <input  type="text" placeholder="请输入电话" style="width:250px;"/>
                    </td>
                </tr>
            </table>
        </div>

        <div class="">
            <table>
                <tr>
                    <td style="width:20%">门诊科室设置：</td>
                    <td style="width:80%">
                        <div style="border:1px solid #969393 ;width:100%;height:200px">
                            <div style="height:170px;">
                            </div>
                            <div style="float:right">
                                <input type="button"   value="增加科室" />
                            </div>

                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="width:20%">住院科室设置：</td>
                    <td style="width:80%">
                        <div style="border:1px solid #969393 ;width:100%;height:200px">
                            <div style="height:170px;">
                            </div>
                            <div style="float:right">
                                <input type="button"   value="增加科室" />
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <input  type="button" value="保存"  class="submit"/>
</div>


</body>
</html>
