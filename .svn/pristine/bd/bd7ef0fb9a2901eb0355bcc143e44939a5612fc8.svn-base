/*css reset 代码*/
body{ margin: 0;padding: 0;font-family: "微软雅黑";font-size:14px;}
body,html{-webkit-text-size-adjust: none;width: 100%;height: 100%;}
*{text-decoration: none;list-style: none;}
img{border: 0px;}
button{
    border:0 none;
}
ul,li,dl,dd,dt,p,ol,h1,h2,h3,h4,h5{padding: 0;margin: 0;}
.wrap{margin: 0 auto;}
.fl{float: left;}
.fr{float: right;}
.clearfix{content:"";display:block;clear:both;height:0; }
.clearfix{
    zoom:1;
}
button{
    cursor: default;
}
a:hover{
    text-decoration: none;
}
.pointer{cursor:pointer;}
a,input,button{ outline:none; }
::-moz-focus-inner{border:0px;}
label{
    font-weight:normal;
}
